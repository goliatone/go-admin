{
  "name": "go-admin-example",
  "version": "1.0.0",
  "description": "Admin panel example with Tailwind CSS",
  "scripts": {
    "build:css": "tailwindcss -i ./assets/input.css -o ./assets/output.css --minify",
    "watch:css": "tailwindcss -i ./assets/input.css -o ./assets/output.css --watch",
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "build": "npm run build:ts && npm run build:css",
    "dev": "concurrently \"npm:watch:ts\" \"npm:watch:css\"",
    "srv": "npm run build && go run *.go",
    "clean": "rm -rf assets/dist"
  },
  "keywords": [
    "admin",
    "tailwind"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  }
}
