{
  "name": "go-admin-example",
  "version": "1.0.0",
  "description": "Admin panel example with Tailwind CSS",
  "type": "module",
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly && npm run build:css:prod",
    "build:css:prod": "tailwindcss -i ./assets/input.css -o ./assets/output.css --minify",
    "build:css": "tailwindcss -i ./assets/input.css -o ./assets/output.css --minify",
    "watch:css": "tailwindcss -i ./assets/input.css -o ./assets/output.css --watch",
    "build:ts": "vite build && tsc --emitDeclarationOnly",
    "watch:ts": "tsc --watch",
    "dev": "vite",
    "dev:legacy": "concurrently \"npm:watch:ts\" \"npm:watch:css\"",
    "preview": "vite preview",
    "srv": "npm run build && go run *.go",
    "clean": "rm -rf assets/dist"
  },
  "keywords": [
    "admin",
    "tailwind"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@types/sortablejs": "^1.15.9",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.4.11"
  },
  "dependencies": {
    "sortablejs": "^1.15.6"
  }
}
