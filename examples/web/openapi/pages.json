{
  "openapi": "3.0.3",
  "info": {
    "title": "Admin Pages",
    "version": "1.0.0"
  },
  "paths": {
    "/admin/pages": {
      "post": {
        "operationId": "createPage",
        "summary": "Create page",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PageCreatePayload"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Created"
          }
        }
      }
    },
    "/admin/pages/{id}": {
      "post": {
        "operationId": "updatePage",
        "summary": "Update page",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PageUpdatePayload"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Updated"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PageCreatePayload": {
        "type": "object",
        "required": [
          "title",
          "slug",
          "status",
          "path"
        ],
        "properties": {
          "title": {
            "type": "string",
            "title": "Title"
          },
          "slug": {
            "type": "string",
            "title": "Slug"
          },
          "path": {
            "type": "string",
            "title": "Path"
          },
          "locale": {
            "type": "string",
            "title": "Locale"
          },
          "status": {
            "type": "string",
            "title": "Status",
            "enum": [
              "published",
              "draft",
              "pending_approval",
              "scheduled"
            ]
          },
          "content": {
            "type": "string",
            "title": "Content"
          },
          "meta_title": {
            "type": "string",
            "title": "SEO Title"
          },
          "meta_description": {
            "type": "string",
            "title": "SEO Description"
          },
          "template_id": {
            "type": "string",
            "title": "Template",
            "x-relationships": {
              "type": "belongsTo",
              "target": "#/components/schemas/Template",
              "foreignKey": "template_id",
              "cardinality": "one"
            },
            "x-endpoint": {
              "url": "/admin/api/templates",
              "resultsPath": "data",
              "mode": "search",
              "searchParam": "q",
              "mapping": {
                "value": "id",
                "label": "label"
              },
              "params": {
                "limit": "25"
              }
            }
          },
          "parent_id": {
            "type": "string",
            "title": "Parent Page",
            "x-relationships": {
              "type": "belongsTo",
              "target": "#/components/schemas/Page",
              "foreignKey": "parent_id",
              "cardinality": "one"
            },
            "x-endpoint": {
              "url": "/admin/crud/pages",
              "resultsPath": "data",
              "mode": "search",
              "mapping": {
                "value": "id",
                "label": "title"
              },
              "params": {
                "order": "title asc",
                "limit": "25"
              },
              "dynamicParams": {
                "title__ilike": "%{{self}}%"
              }
            }
          },
          "translation_group_id": {
            "type": "string",
            "title": "Translation Group"
          },
          "blocks": {
            "type": "array",
            "title": "Blocks",
            "x-formgen": {
              "widget": "block-library-picker",
              "label": "Page Sections",
              "sortable": true
            },
            "items": {
              "oneOf": [
                { "$ref": "#/components/schemas/BlockHero" },
                { "$ref": "#/components/schemas/BlockRichText" }
              ]
            }
          }
        }
      },
      "PageUpdatePayload": {
        "type": "object",
        "required": [
          "title",
          "slug",
          "status",
          "path"
        ],
        "properties": {
          "title": {
            "type": "string",
            "title": "Title"
          },
          "slug": {
            "type": "string",
            "title": "Slug"
          },
          "path": {
            "type": "string",
            "title": "Path"
          },
          "locale": {
            "type": "string",
            "title": "Locale"
          },
          "status": {
            "type": "string",
            "title": "Status",
            "enum": [
              "published",
              "draft",
              "pending_approval",
              "scheduled"
            ]
          },
          "content": {
            "type": "string",
            "title": "Content"
          },
          "meta_title": {
            "type": "string",
            "title": "SEO Title"
          },
          "meta_description": {
            "type": "string",
            "title": "SEO Description"
          },
          "template_id": {
            "type": "string",
            "title": "Template",
            "x-relationships": {
              "type": "belongsTo",
              "target": "#/components/schemas/Template",
              "foreignKey": "template_id",
              "cardinality": "one"
            },
            "x-endpoint": {
              "url": "/admin/api/templates",
              "resultsPath": "data",
              "mode": "default",
              "mapping": {
                "value": "id",
                "label": "label"
              },
              "params": {
                "limit": "1"
              },
              "dynamicParams": {
                "id": "{{self}}"
              }
            }
          },
          "parent_id": {
            "type": "string",
            "title": "Parent Page",
            "x-relationships": {
              "type": "belongsTo",
              "target": "#/components/schemas/Page",
              "foreignKey": "parent_id",
              "cardinality": "one"
            },
            "x-endpoint": {
              "url": "/admin/crud/pages",
              "resultsPath": "data",
              "mode": "default",
              "mapping": {
                "value": "id",
                "label": "title"
              },
              "params": {
                "limit": "1"
              },
              "dynamicParams": {
                "id": "{{self}}"
              }
            }
          },
          "translation_group_id": {
            "type": "string",
            "title": "Translation Group"
          },
          "blocks": {
            "type": "array",
            "title": "Blocks",
            "x-formgen": {
              "widget": "block-library-picker",
              "label": "Page Sections",
              "sortable": true
            },
            "items": {
              "oneOf": [
                { "$ref": "#/components/schemas/BlockHero" },
                { "$ref": "#/components/schemas/BlockRichText" }
              ]
            }
          }
        }
      },
      "Page": {
        "type": "object",
        "x-formgen-label-field": "title",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string"
          },
          "slug": {
            "type": "string"
          },
          "path": {
            "type": "string"
          }
        }
      },
      "Template": {
        "type": "object",
        "x-formgen-label-field": "label",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "slug": {
            "type": "string"
          },
          "template_path": {
            "type": "string"
          },
          "label": {
            "type": "string"
          }
        }
      },
      "BlockHero": {
        "type": "object",
        "required": ["_type", "headline"],
        "x-formgen": {
          "label": "Hero",
          "icon": "star",
          "collapsed": true
        },
        "properties": {
          "_type": {
            "type": "string",
            "enum": ["hero"],
            "x-formgen": {
              "readonly": true
            }
          },
          "headline": {
            "type": "string",
            "title": "Headline"
          },
          "subheadline": {
            "type": "string",
            "title": "Subheadline"
          },
          "cta_label": {
            "type": "string",
            "title": "CTA Label"
          },
          "cta_url": {
            "type": "string",
            "title": "CTA URL"
          }
        }
      },
      "BlockRichText": {
        "type": "object",
        "required": ["_type", "body"],
        "x-formgen": {
          "label": "Rich Text",
          "icon": "text"
        },
        "properties": {
          "_type": {
            "type": "string",
            "enum": ["rich_text"],
            "x-formgen": {
              "readonly": true
            }
          },
          "body": {
            "type": "string",
            "title": "Body",
            "x-formgen": {
              "widget": "wysiwyg"
            }
          }
        }
      }
    }
  }
}
